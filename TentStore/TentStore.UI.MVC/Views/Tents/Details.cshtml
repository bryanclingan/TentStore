@model TentStore.DATA.EF.Tent

@{
    ViewBag.Title = "Detail";
}

<div class="row mb-5">
    <div class="col-lg-6">
        <!-- PRODUCT SLIDER-->
        <div class="row m-sm-0">
           
            <div class="col-sm-10 order-1 order-sm-2">
                <div class="owl-carousel product-slider" data-slider-id="1"><a class="d-block" href="~/Content/img/@Html.DisplayFor(model => model.ImageURL)" data-lightbox="product" title="@Html.DisplayFor(model => model.Name)"><img class="img-fluid" src="~/Content/img/@Html.DisplayFor(model => model.ImageURL)" alt="..."></a></div>
            </div>
        </div>
    </div>
    <!-- PRODUCT DETAILS-->
    <div class="col-lg-6">
        
        <h1>@Html.DisplayFor(model => model.Name)</h1>
        <p class="text-muted lead">@Html.DisplayFor(model => model.Price)</p>
        <p class="text-small mb-4">@Html.DisplayFor(model => model.Description)</p>
        <div class="row align-items-stretch mb-4">
            <div class="col-sm-5 pr-sm-0">
                <div class=" d-flex align-items-center justify-content-between py-1 px-3">
                    @using(Html.BeginForm("AddToCart","Tents",new { tentId= Model.TentID }, FormMethod.Post))
                    {
                        @Html.HiddenFor(x=>x.TentID)
                        @Html.TextBox("Qty", 1, new { @class = "text-center form-control border-1 shadow-1 p-1" })
                        <input type="submit"value="Add To Cart" class="btn btn-dark btn-sm btn-block h-100 d-flex align-items-center justify-content-center px-0" />
                    }
                    
                    </div>
                </div>
            </div>
            
        <ul class="list-unstyled small d-inline-block">
            <li class="px-3 py-2 mb-1 bg-white"><strong class="text-uppercase">Brand:</strong><span class="ml-2 text-muted"> @Html.DisplayFor(model => model.Brand.BrandName)</span></li>
            <li class="px-3 py-2 mb-1 bg-white text-muted"><strong class="text-uppercase text-dark">Season:</strong><a class="reset-anchor ml-2" href="#">@Html.DisplayFor(model => model.Season.Season1)</a></li>
            <li class="px-3 py-2 mb-1 bg-white text-muted"><strong class="text-uppercase text-dark">Capacity:</strong><a class="reset-anchor ml-2" href="#">@Html.DisplayFor(model => model.Capacity.Capacity1)</a></li>
        </ul>
    </div>
</div>
<!-- DETAILS TABS-->
<ul class="nav nav-tabs border-0" id="myTab" role="tablist">
    <li class="nav-item"><a class="nav-link active" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">Description</a></li>
    
</ul>
<div class="tab-content mb-5" id="myTabContent">
    <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
        <div class="p-4 p-lg-5 bg-white">
            <h6 class="text-uppercase">Product description </h6>
            <p class="text-muted text-small mb-0">@Html.DisplayFor(model => model.Description)</p>
        </div>
    </div>
    
</div>